/* 头部 */

page {
    background: #f5f5f5;
}

.header {
    width: 100%;
    height: 400rpx;
    background: #ff2d4a;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.portrait {
    width: 200rpx;
    height: 200rpx;
    border-radius: 50px;
    overflow: hidden;
    margin-bottom: 10rpx;
}

.nickname {
    color: #fff;
    font-size: 14px;
}

.icon-icon_set_up {
    position: fixed;
    top: 165rpx;
    left: 180rpx;
    color: #fff;
}

.icon-dakaihuihua {
    position: fixed;
    top: 165rpx;
    right: 180rpx;
    color: #fff;
}

/* 收藏的店铺 */

.collect {
    position: fixed;
    width: 730rpx;
    top: 350rpx;
    left: 10rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
    font-size: 14px;
    background: #fff;
}

.collect-item {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 20rpx 0;
}

/* 我的订单 */

.footer {
    padding: 20rpx;
}

.order {
    margin-top: 100rpx;
    background: #fff;
}

.order-top {
    display: flex;
    justify-content: flex-start;
    padding: 20rpx;
    border-bottom: 1px solid #ccc;
}

.order-bottom {
    display: flex;
    justify-content: space-around;
    align-items: center;
    font-size: 14px;
}

.bottom-item {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 20rpx 0;
}

.bottom-item .iconfont {
    color: red;
}

/* 收货地址管理 */

.address {
    background: #fff;
    margin: 20rpx 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx;
   
}

.jiantou {
    width: 8px;
    height: 8px;
    border-top: 1px solid #ccc;
    border-right: 1px solid #ccc;
    transform: rotate(45deg);
}

/* 售后服务 */
.after{
    background: #fff;
    margin-top: 20rpx;
}
.idea,.service{
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid #ccc;
    padding: 20rpx;
}
.phone{
    color: #ccc;
}
