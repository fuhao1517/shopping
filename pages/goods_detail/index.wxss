/* pages/goods_detail/index.wxss */

.lunbo {
    width: 100%;
    height: 720rpx;
}

.lunbo image {
    width: 100%;
    height: 100%;
}

.goods-info {
    padding: 20rpx;
    border-bottom: 20rpx solid #ccc;
}

.goods-price {
    font-size: 23px;
    color: red;
    margin-bottom: 20rpx;
}

.goods-title {
    display: flex;
    justify-content: space-between;
}

.title-left {
    flex: 1;
    font-size: 14px;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.collect {
    width: 120rpx;
    color: #ccc;
    font-size: 15px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border-left: 1px solid #ccc;
    margin-left: 20rpx;
}

.expressage {
    margin: 20rpx 0;
    color: #ccc;
}

.richtext {
    padding-bottom: 200rpx;
}

.footer {
    padding: 0 20rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    background: #fff;
}

.footer-top {
    margin: 20rpx;
}

.footer-top text {
    margin-left: 30rpx;
    color: red;
}

.footer-bottom {
    height: 100rpx;
    display: flex;
}

.bottom-left {
    display: flex;
    width: 40%;
}

.bottom-left>view {
    width: 50%;
    display: flex;
    flex-direction: column;
    font-size: 14px;
    justify-content: center;
    align-items: center;
}

.bottom-right {
    display: flex;
    width: 60%;
}

.bottom-right>view {
    width: 50%; 
    display: flex;
    flex-direction: column;
    font-size: 14px;
    justify-content: center;
    align-items: center;
    background: orange;
    color: #fff;
}
.bottom-right>view:nth-child(2){
    background: red;
}
