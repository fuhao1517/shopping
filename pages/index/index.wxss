/* 轮播图 */

.lunbo {
    width: 100%;
    height: 335rpx;
}

.lunbo image {
    width: 100%;
    height: 100%;
}

/* 分类导航 */

.menus {
    display: flex;
    justify-content: space-around;
    padding: 20rpx 0;
}

.menus image {
    width: 128rpx;
    height: 140rpx;
}

/* 广告1 */

.guang-gao {
    width: 100%;
    margin: 10rpx 0;
}

.guang-gao image {
    width: 100%;
    height: 59rpx;
}

/* 优质服饰 */

.costume {
    width: 100%;
    display: flex;
    justify-content: space-between;
    padding: 0 9rpx;
    box-sizing: border-box;
}

.costume .costume-left {
    margin-right: 20rpx;
}

.costume .costume-left image {
    width: 232rpx;
    height: 386rpx;
}

.costume .costume-right {
    flex: 1;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}

.costume .costume-right image {
    width: 233rpx;
    height: 188rpx;
}

