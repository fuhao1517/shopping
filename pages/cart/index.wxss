.address {
    display: flex;
    justify-content: space-between;
    padding: 20rpx;
    padding-bottom: 0;
    align-items: center;
}

.jiantou {
    width: 10px;
    height: 10px;
    border-top: 1px solid #ccc;
    border-right: 1px solid #ccc;
    transform: rotate(45deg);
    margin-left: 20rpx;
}

.userInfo {
    padding: 20rpx;
}

.userInfo_header {
    display: flex;
    justify-content: space-between;
    padding: 20rpx 0;
}

.telNumber {
    display: flex;
    align-items: center;
}

.userInfo_header view:nth-child(2) text {
    margin-left: 50rpx;
    font-size: 20px;
    color: #ccc;
}

image {
    width: 100%;
    height: 20rpx;
}

.shop_name {
    display: flex;
    justify-content: flex-start;
    padding: 30rpx;
    vertical-align: middle;
    border-bottom: 1px solid #ccc;
}

.icon-dianpu {
    margin-right: 10rpx;
    color: #999;
}

.goods_lists {
    padding-bottom: 80px;
}

.goods_list {
    display: flex;
    justify-content: flex-start;
    padding: 20rpx;
    border-bottom: 1px solid #ccc;
}

.goods_list icon {
    margin: 0 20rpx 0 0;
    display: flex;
    align-items: center;
}

.goods_list image {
    width: 160rpx;
    height:160rpx;
    margin-right: 20rpx;
}

.goods_rigth {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.goods_list_title {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.prices {
    display: flex;
    justify-content: space-between;
    text-align: center;
}

.price {
    color: red;
}
.price-right{
    display: flex;
    justify-content: space-between;
}
.jian, .jia {
    width: 60rpx;
    height: 50rpx;
    border: 2px solid #000;
    text-align: center;
    line-height: 45rpx;
}
.num{
    width: 150rpx;
}

.pay {
    display: flex;
    height: 100rpx;
    border-bottom: 1px solid #ccc;
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    background: #fff;
}

.pay icon {
    margin: 0 20rpx;
    display: flex;
    align-items: center;
}

.check_all {
    margin-right: 50rpx;
    display: flex;
    align-items: center;
}

.total view:nth-child(2) {
    font-size: 13px;
    color: #666;
}

.pay .price {
    color: red;
    margin-right: 20rpx;
}

.close {
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    background: red;
    width: 200rpx;
    color: #fff;
    position: absolute;
    right: 0;
    bottom: 0;
}
