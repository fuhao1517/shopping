.container {
    display: flex;
    justify-content: space-between;
    position: absolute;
    top: 100rpx;
    bottom: 0;
    height: 100%;
}

.menu-left {
    width: 200rpx;
    background: #f5f5f5;
    height: 100%;
    overflow-y: scroll;
}

.menu-item {
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
}

.active {
    color: red;
    background: #fff;
    position: relative;
}

.active::before {
    display: block;
    width: 3px;
    height: 60rpx;
    background: red;
    position: absolute;
    left: 0;
    top: 20rpx;
    content: "";
}

.content-right {
    flex: 1;
    overflow-y: scroll;
}

.content-right .title {
    text-align: center;
    margin: 20rpx 0;
}

.content-right .brand {
    display: flex;
    flex-wrap: wrap;
}

.content-right .brand .brand-item {
    width: 33.33%;
    text-align: center;
    padding: 20rpx;
    box-sizing: border-box;
}

.content-right .brand .brand-item image {
    width: 120rpx;
    height: 120rpx;
}

.content-right .brand .brand-item .text {
    text-align: center;
}
